<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        style="@style/tituloModElim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin20"
        android:layout_marginBottom="60dp"
        android:text="MODIFICAR:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            style="@style/tituloModElim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/titleMod" />
        <EditText
            android:id="@+id/eTTitulo"
            style="@style/editTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/enorme"
            android:maxLines="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:layout_marginHorizontal="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/tituloModElim"
            android:text="@string/descMod"
            android:gravity="center"/>
        <EditText
            android:id="@+id/eTDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/editTextStyle"
            android:textSize="@dimen/enorme"
            android:maxLines="4"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:layout_marginHorizontal="20dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/tituloModElim"
                android:text="@string/imgMod"
                android:gravity="left"/>
        <Spinner
            android:id="@+id/spImagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin20"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".04">

        <Button
            android:id="@+id/bSave"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/margin20"
            android:layout_height="wrap_content"
            android:text="GUARDAR"/>

    </LinearLayout>

</LinearLayout>