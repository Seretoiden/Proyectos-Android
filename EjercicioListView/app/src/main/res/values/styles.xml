<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonStyle" parent="Base.Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="textviewStyle" parent="textoCaja">
        <item name="android:width">@dimen/none</item>
        <item name="android:layout_weight">@dimen/porc30</item>
    </style>
    <style name="editTextStyle" parent="textoCaja">
        <item name="android:width">@dimen/none</item>
        <item name="android:layout_weight">@dimen/porc70</item>
    </style>

    <style name="textoCaja" parent="Base.Theme.AppCompat.Light">
        <item name="android:textViewStyle">@style/textviewStyle</item>
        <item name="android:editTextStyle">@style/editTextStyle</item>
    </style>

    <style name="tituloModElim" parent="Base.Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/enorme</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="editTextStyleModGuardar" parent="Base.Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/enorme</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
